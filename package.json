{
	"name": "@0xsequence/marketplace-sdk",
	"private": false,
	"version": "0.0.1",
	"description": "Marketplace SDK for Sequence",
	"repository": "https://github.com/0xsequence/marketplace-sdk",
	"author": "Horizon Blockchain Games",
	"type": "module",
	"scripts": {
		"build": "pnpm run --r --filter \"./packages/**\" build",
		"changeset:publish": "pnpm changeset:prepublish && changeset publish",
		"changeset:version": "changeset version && pnpm version:update && pnpm format",
		"clean": "pnpm run --r --parallel clean && rm -rf packages/**/*.json.tmp",
		"deps": "pnpx taze -r",
		"dev:next": "pnpm --filter next-app dev",
		"dev:react": "pnpm --filter react-vite dev",
		"check": "biome check --write",
		"check:types": "pnpm run --r --parallel check:types && tsc --noEmit",
		"check:unused": "pnpm clean && knip",
		"format": "biome format --write",
		"preinstall": "pnpx only-allow pnpm"
	},
	"files": [
		"src",
		"dist"
	],
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		},
		"./styles": "./dist/index.css",
		"./react": {
			"types": "./dist/react/index.d.ts",
			"default": "./dist/react/index.js"
		},
		"./react/hooks": {
			"types": "./dist/react/hooks/index.d.ts",
			"default": "./dist/react/hooks/index.js"
		},
		"./react/ssr": {
			"types": "./dist/react/ssr/index.d.ts",
			"default": "./dist/react/ssr/index.js"
		}
	},
	"dependencies": {
		"@legendapp/state": "3.0.0-beta.13",
		"@radix-ui/react-dialog": "^1.1.2",
		"@radix-ui/react-popover": "^1.1.2",
		"date-fns": "^4.1.0",
		"react-day-picker": "^9.3.0",
		"zod": "^3.23.8"
	},
	"peerDependencies": {
		"@0xsequence/api": "^2.0.13",
		"@0xsequence/design-system": "^1.7.8",
		"@0xsequence/indexer": "^2.0.13",
		"@0xsequence/kit": "^4.3.2",
		"@0xsequence/kit-checkout": "^4.3.2",
		"@0xsequence/metadata": "^2.0.13",
		"@0xsequence/network": "^2.0.13",
		"@tanstack/react-query": "5.59.14",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"viem": "^2.21.25",
		"wagmi": "^2.12.17"
	},
	"devDependencies": {
		"@arethetypeswrong/cli": "^0.16.4",
		"@biomejs/biome": "^1.9.4",
		"@changesets/changelog-github": "0.4.6",
		"@changesets/cli": "^2.27.9",
		"typescript": "5.5.4"
	},
	"packageManager": "pnpm@9.12.3",
	"engines": {
		"node": "22.x"
	}
}
